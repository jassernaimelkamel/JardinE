{% extends 'base.html.twig' %}

{% block body %}
    <center>
    <h1>Enfants list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Sexe</th>
                <th>Lieunaissance</th>
                <th>Datenaissance</th>
                <th>Medecin</th>
                <th>Medecinnumero</th>
                <th>Classe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for enfant in enfants %}
            <tr>
                <td><a href="{{ path('enfants_show', { 'id': enfant.id }) }}">{{ enfant.id }}</a></td>
                <td>{{ enfant.nom }}</td>
                <td>{{ enfant.prenom }}</td>
                <td>{{ enfant.sexe }}</td>
                <td>{{ enfant.lieuNaissance }}</td>
                <td>{% if enfant.dateNaissance %}{{ enfant.dateNaissance|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ enfant.medecin }}</td>
                <td>{{ enfant.medecinNumero }}</td>
                <td>{{ enfant.idClasse }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('enfants_show', { 'id': enfant.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('enfants_edit', { 'id': enfant.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('enfants_new') }}">Create a new enfant</a>
        </li>
    </ul>
    </center>
{% endblock %}
